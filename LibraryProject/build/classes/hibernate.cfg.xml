<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
<session-factory>
	<!-- mySQL Driver class name -->
	<property name="hibernate.connection.driver_class">
		com.mysql.jdbc.Driver
	</property>
	<!--  mySQL URL -->
	<property name="hibernate.connection.url">
		jdbc:mysql://localhost:3306/libdb
	</property>
      <property name="hibernate.connection.username">root</property>
      <property name="hibernate.connection.password">root</property>
      <property name="hibernate.connection.pool_size">4</property>
     <!-- enables to view Hibernate generated SQL --> 
      <property name="show_sql">true</property>
      <!--  format the SQL generated by Hibernate -->
	   <property name="format_sql">true</property>
      <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
      <property name="hibernate.connection.autocommit">true</property>

      <property name="hibernate.hbm2ddl.auto">update</property>
 
      <mapping resource="entity/users.hbm.xml"/>
      <mapping resource="entity/books.hbm.xml"/>
       <mapping resource="entity/Users_Books.hbm.xml"/>
        <mapping resource="entity/bookRequest.hbm.xml"/>    
</session-factory>
</hibernate-configuration>
